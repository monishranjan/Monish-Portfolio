<!-- JS -->
// Project Card Hover Animation
const pcards = document.querySelectorAll('.project-card');

pcards.forEach(function(card) {
    card.addEventListener('mousemove', rotate);
    card.addEventListener('mouseout', stopRotate);
});

function stopRotate() {
    const projectItem = this.querySelector('.project-item');
    projectItem.style.transform = 'rotateX(0) rotateY(0)';
}

function rotate(event) {
    const projectItem = this.querySelector('.project-item');
    const halfHeight = projectItem.offsetHeight / 2;
    const halfWidth = projectItem.offsetWidth / 2;

    projectItem.style.transform = 'rotateX('+ -(event.offsetY - halfHeight) / 10 +'deg) rotateY('+ -(event.offsetX - halfWidth) / 10 +'deg)';
}
